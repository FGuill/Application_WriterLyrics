<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="3"
    tools:context="testappparse.guilla.com.testappparse.testappparse.guilla.com.sharity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:weightSum="3">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.95"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/logopro"
                android:src="@drawable/logopro" />

        </FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <com.sharity.sharityUser.fonts.TextViewNotoSansRegular
            android:text="BIENVENUE SUR SHARITY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:gravity="center"
            app:NotoRegular="notosansuiregular.ttf"
            android:textColor="@color/red"
            android:textSize="@dimen/login_pro_title"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:weightSum="4">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/username_TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.8"
                    android:gravity="center"
                    android:theme="@style/TextLabel"

                    >

                    <EditText
                        android:id="@+id/username_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/login_pro_editext"
                        android:hint="Nom d'utilisateur"
                        android:layout_weight="2.8"
                        android:ems="10"
                        />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:layout_marginTop="7dp"
                android:weightSum="4">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.8"
                    android:gravity="center"
                    android:theme="@style/TextLabel"
                    >

                    <EditText
                        android:id="@+id/password_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:hint="Mot de passe"
                        android:layout_weight="2.8"
                        android:ems="10"
                        />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:weightSum="4">


                <com.sharity.sharityUser.fonts.TextViewNotoSansRegular
                    android:text="mot de passe oubliÃ© / changer de mot de passe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:NotoRegular="notosansuiregular.ttf"
                    android:textSize="@dimen/login_pro_changepassword"
                    android:layout_weight="2.7"
                    android:id="@+id/forgotpassword"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1.4"
                android:weightSum="2"
                >

                <com.sharity.sharityUser.fonts.TextViewNotoSansRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="LOGIN"
                    android:textSize="@dimen/login_pro_buttondone"
                    android:textColor="@color/red"
                    android:background="@color/transparent"
                    app:NotoRegular="notosansuiregular.ttf"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/login_BT"

                    />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
      >


        <com.sharity.sharityUser.fonts.TextViewNotoSansRegular
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="INSCRIPTION"
            android:gravity="bottom|right"
            android:id="@+id/inscription"
            android:textSize="@dimen/login_pro_inscription"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            app:NotoRegular="notosansuiregular.ttf"

            />
    </RelativeLayout>

</LinearLayout>
